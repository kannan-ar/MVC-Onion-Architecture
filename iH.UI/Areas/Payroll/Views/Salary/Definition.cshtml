
@{
    ViewBag.Title = "Salary Definition";
}

<div class="row">
    <div class="col-sm-1"></div>
    <div class="col-sm-10">
        <button type="button" class="btn btn-default" data-bind="click: add">Add New</button>
    </div>
    <div class="col-sm-1"></div>
</div>
<div class="row">
    <div class="col-sm-12">&nbsp;</div>
</div>
<div class="row">
    <div class="col-sm-1"></div>
    <div class="col-sm-10">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Row ID</th>
                    <th>Definition Name</th>
                    <th>Formula</th>
                    <th>Formula Percentage</th>
                    <th>Minimum</th>
                    <th>Maximum</th>
                    <th>Is Deduction</th>
                    <th>Is Variable</th>
                    <th>Is Incentive</th>
                    <th>Is LOP</th>
                    <th></th>
                </tr>
            </thead>
            <tbody data-bind="foreach: DefinitionList">
                <tr>
                    <td data-bind="text: rowId"></td>
                    <td data-bind="text: definitionName"></td>
                    <td data-bind="text: formula"></td>
                    <td data-bind="text: formulaPercentage"></td>
                    <td data-bind="text: minimum"></td>
                    <td data-bind="text: maximum"></td>
                    <td data-bind="text: isDeduction"></td>
                    <td data-bind="text: isVariable"></td>
                    <td data-bind="text: isIncentive"></td>
                    <td data-bind="text: isLOP"></td>
                    <td>
                        <a href="#" data-bind="click: $root.edit.bind($data)">Edit</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="col-sm-1"></div>
</div>
<div id="definitionModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Salary Definition</h4>
            </div>
            <div class="modal-body" data-bind="with: Definition">
                <form>
                    <div class="form-group row">
                        <label for="rowId" class="col-sm-4 col-form-label">Row ID</label>
                        <div class="col-sm-3">
                            <input name="rowId" class="form-control" type="text" data-bind="value: rowId" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="definitionName" class="col-sm-4 col-form-label">Definition</label>
                        <div class="col-sm-8">
                            <input name="definitionName" class="form-control" type="text" data-bind="value: definitionName" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="formula" class="col-sm-4 col-form-label">Formula</label>
                        <div class="col-sm-6">
                            <input name="formula" type="text" class="form-control" data-bind="value: formula" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="formulaPercentage" class="col-sm-4 col-form-label">Formula Percentage</label>
                        <div class="col-sm-3">
                            <input name="formulaPercentage" class="form-control" type="text" data-bind="value: formulaPercentage" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="minimum" class="col-sm-4 col-form-label">Minimum</label>
                        <div class="col-sm-3">
                            <input name="minimum" type="text" class="form-control" data-bind="value: minimum" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="maximum" class="col-sm-4 col-form-label">Maximum</label>
                        <div class="col-sm-3">
                            <input name="maximum" type="text" class="form-control" data-bind="value: maximum" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="isDeduction" class="col-sm-4 col-form-label">Is Deduction</label>
                        <div class="col-sm-1">
                            <input name="isDeduction" type="checkbox" class="form-check-input" data-bind="checked: isDeduction" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="isVariable" class="col-sm-4 col-form-label">Is Variable</label>
                        <div class="col-sm-1">
                            <input name="isVariable" type="checkbox" class="form-check-input" data-bind="checked: isVariable" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 form-check-label" for="isIncentive">Is Incentive</label>
                        <div class="col-sm-1">
                            <input name="isIncentive" type="checkbox" class="form-check-input" data-bind="checked: isIncentive" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 form-check-label" for="isIncentive">Is LOP</label>
                        <div class="col-sm-1">
                            <input name="isIncentive" type="checkbox" class="form-check-input" data-bind="checked: isLOP" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bind="click: save">Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script type="text/javascript" src="~/Scripts/knockout-3.4.2.js"></script>
    <script type="text/javascript" src="~/Scripts/ViewModels/salary-definition.js"></script>
    <script type="text/javascript">
        var vm = new viewModel();

        ko.applyBindings(vm);

        vm.load();
    </script>
}
