@using iH.ViewModels

@model LoginViewModel

@{
    ViewBag.Title = "Login";
}


<div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-4">
        <div class="well">
            @using (Html.BeginForm("Index", "Login", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.Label("Company")
                    @Html.DropDownListFor(e => e.CompanyId, new SelectList(Model.Companies, "CompanyId", "CompanyName"), "Select Company", new { @class = "form-control" })
                    @Html.ValidationMessageFor(e => e.CompanyId)
                </div>
                <div class="form-group">
                    @Html.Label("User Name")
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(e => e.UserName)
                </div>
                <div class="form-group">
                    @Html.Label("Password")
                    @Html.TextBoxFor(m => m.Password, new { type = "password", @class = "form-control" })
                    @Html.ValidationMessageFor(e => e.Password)
                </div>
                <input type="submit" value="Login" class="btn btn-primary" />
                <br />
                <div class="label label-danger">@ViewBag.Message</div>
            }
        </div>
    </div>
    <div class="col-sm-6"></div>
</div>
